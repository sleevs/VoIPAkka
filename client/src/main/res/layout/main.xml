<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <TextView
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/title_status"
            android:id="@+id/title_status"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
    />
    <TextView
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/hello"
            android:id="@+id/status"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/title_status"
            android:gravity="center"
    />
    <TextView
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/title_ip_address"
            android:id="@+id/title_ip_address"
            android:layout_below="@id/title_status"
            android:layout_alignParentStart="true"
            android:gravity="center"
    />
    <EditText
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:id="@+id/address"
            android:text="@string/ip_address"
            android:layout_below="@id/title_status"
            android:layout_toRightOf="@id/title_ip_address"
            android:gravity="center"
    />
    <TextView
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/title_port"
            android:id="@+id/title_port"
            android:layout_below="@id/title_ip_address"
            android:layout_alignParentStart="true"
            android:gravity="center"
    />
    <EditText
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:id="@+id/port"
            android:text="@string/port"
            android:layout_below="@id/title_ip_address"
            android:layout_toRightOf="@id/title_port"
            android:gravity="center"
    />
    <Button
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/connect"
            android:id="@+id/connect"
            android:layout_below="@id/title_port"
            android:gravity="center"
    />
    <TextView
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:text="@string/title_mic"
            android:id="@+id/title_mic"
            android:layout_below="@id/connect"
            android:layout_alignParentStart="true"
            android:gravity="center"
    />
    <ToggleButton
            android:layout_width="wrap_content"
             android:layout_height="@dimen/row_height"
            android:layout_margin="5dp"
            android:id="@+id/toggle_mic"
            android:layout_below="@id/connect"
            android:layout_toRightOf="@id/title_mic"
            android:gravity="center"
    />
</RelativeLayout>